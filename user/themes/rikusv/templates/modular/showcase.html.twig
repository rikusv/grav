{% set showcase_image = page.media.images|first.contrast(20).brightness(-90).colorize(25,20,35) %}
{% if showcase_image %}
	<div class="modular-row showcase {{ page.header.position }}" style="background-image: url({{ showcase_image.url }});">
{% else %}
<div class="modular-row showcase">
{% endif %}
    {{ content }}

    {% for button in page.header.buttons %}
        <a class="button{% if button.primary %} primary{% endif %}" href="{{ button.url }}">{{ button.text }}</a>
    {% endfor %}

</div>
